<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:text="Menu"
        android:textColor="@color/material_grey_100"
        android:textStyle="bold" />

    <Button
        android:id="@+id/connectToServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in" />

    <Button
        android:id="@+id/registerToSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register to System" />

    <Button
        android:id="@+id/toGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to Game" />

    <Button
        android:id="@+id/joinAGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join A Game"
        android:visibility="gone" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="log Out"
        android:visibility="gone" />
     <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exit"
         />

    <TextView
        android:id="@+id/txtResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_grey_100" />
    

</LinearLayout>